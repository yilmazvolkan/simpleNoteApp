<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="noteFragmentViewState"
            type="com.yilmazvolkan.simplenoteapp.view.NoteFragmentViewState" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/primary"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:background="@color/dark"
            android:weightSum="10"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_16dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/image_view_back"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                tools:ignore="ContentDescription" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <View
                android:layout_width="0dp"
                android:visibility="@{noteFragmentViewState.listNotStateVisibility}"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/image_view_add_note"
                android:visibility="@{noteFragmentViewState.listStateVisibility}"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_history_edu_black_24dp"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:visibility="@{noteFragmentViewState.listStateVisibility}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@color/light"
            android:layout_margin="@dimen/dimen_16dp"
            app:cardCornerRadius="@dimen/dimen_8dp"
            app:cardElevation="@dimen/dimen_4dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewEffects"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light"
                android:paddingBottom="@dimen/dimen_4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_note" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_margin="@dimen/dimen_4dp"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="@{noteFragmentViewState.addStateVisibility}">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"
                    android:inputType="text"
                    android:padding="@dimen/dimen_4dp"
                    android:singleLine="true"
                    android:textSize="@dimen/title_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:inputType="text"
                    android:maxLines="15"
                    android:padding="@dimen/dimen_4dp"
                    android:textSize="@dimen/title_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/image_url"
                    android:inputType="text"
                    android:padding="@dimen/dimen_4dp"
                    android:singleLine="true"
                    android:textSize="@dimen/title_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_add"
                android:visibility="@{noteFragmentViewState.editStateAddBtnVisibility}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add" />

            <Button
                android:id="@+id/button_save"
                android:visibility="@{noteFragmentViewState.editStateSaveBtnVisibility}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_margin="@dimen/dimen_4dp"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="@{noteFragmentViewState.showStateVisibility}">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:inputType="text"
                android:padding="@dimen/dimen_4dp"
                android:singleLine="true"
                android:textSize="@dimen/title_text_size" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:inputType="text"
                android:padding="@dimen/dimen_4dp"
                android:singleLine="true"
                android:textSize="@dimen/title_text_size" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:inputType="text"
                android:padding="@dimen/dimen_4dp"
                android:singleLine="true"
                android:textSize="@dimen/title_text_size" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete" />

            <Button
                android:id="@+id/button_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit" />
        </LinearLayout>

    </RelativeLayout>
</layout>